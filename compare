server {
    listen 443;
    server_name $host;
    rewrite ^/$ https://$host/_plugin/kibana redirect;
 
    ssl_certificate           /etc/nginx/cert.crt;
    ssl_certificate_key       /etc/nginx/cert.key;
 
    ssl on;
    ssl_session_cache  builtin:1000  shared:SSL:10m;
    ssl_protocols  TLSv1 TLSv1.1 TLSv1.2;
    ssl_ciphers HIGH:!aNULL:!eNULL:!EXPORT:!CAMELLIA:!DES:!MD5:!PSK:!RC4;
    ssl_prefer_server_ciphers on;
 
 
    location ^~ /_plugin/kibana {
        # Forward requests to Kibana
        proxy_pass https://vpc-shamounskibana-7lvcohekpzxabnhnmmonrvwadi.ap-southeast-2.es.amazonaws.com/_plugin/kibana/;
 
        # Handle redirects to Amazon Cognito
        proxy_redirect https://kibanashamouns.auth.ap-southeast-2.amazoncognito.com/ https://$host;
 
        # Update cookie domain and path
        proxy_cookie_domain vpc-shamounskibana-7lvcohekpzxabnhnmmonrvwadi.ap-southeast-2.es.amazonaws.com $host;
 
        proxy_set_header Accept-Encoding "";
        sub_filter_types *;
        sub_filter $ES_endpoint $host;
        sub_filter_once off;
 
        # Response buffer settings
        proxy_buffer_size 128k;
        proxy_buffers 4 256k;
        proxy_busy_buffers_size 256k;
    }
 
    location ~ \/(log|sign|error|fav|forgot|change|confirm) {
        # Forward requests to Cognito
        proxy_pass https://kibanashamouns.auth.ap-southeast-2.amazoncognito.com/;
 
        # Handle redirects to Kibana
        proxy_redirect https://vpc-shamounskibana-7lvcohekpzxabnhnmmonrvwadi.ap-southeast-2.es.amazonaws.com https://$host;
 
        # Handle redirects to Amazon Cognito
        proxy_redirect https://kibanashamouns.auth.ap-southeast-2.amazoncognito.com/ https://$host;
 
        # Update cookie domain
        proxy_cookie_domain kibanashamouns.auth.ap-southeast-2.amazoncognito.com/ $host;
    }
}
